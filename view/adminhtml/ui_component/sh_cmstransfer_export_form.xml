<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cms_transfer_export_form.cms_transfer_export_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">cms_transfer_export_form</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <namespace>barna_stickers_sticker_form</namespace>
        <buttons>
            <button name="back" class="Sh\CmsTransfer\Block\Adminhtml\Edit\Button\BackButton"/>
            <button name="save" class="Sh\CmsTransfer\Block\Adminhtml\Edit\Button\Save"/>
        </buttons>
        <dataScope>data</dataScope>
        <deps>
            <dep>cms_transfer_export_form.cms_transfer_export_form_data_source</dep>
        </deps>
    </settings>

