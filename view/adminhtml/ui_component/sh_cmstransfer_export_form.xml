    <fieldset name="general" sortOrder="10">
        <settings>
            <label/>
            <collapsible>false</collapsible>
        </settings>

        <field name="id" formElement="hidden" />
        <field name="is_active" formElement="checkbox" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Sticker</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <settings>
                <dataType>string</dataType>
                <visible>true</visible>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-message-no-link" xsi:type="boolean">true</rule>
                    <rule name="validate-message-no-widget" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="position" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Sticker position</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="no-marginal-whitespace" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="html_content" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">HTML Content</label>
            </settings>
        </field>
        <field name="redirect" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Redirect URL</label>
                <validation>
                    <rule name="no-marginal-whitespace" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="css_class" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Custom CSS Class</label>
            </settings>
        </field>
    </fieldset>
</form>
